<% tasks.each do |task| %>
  <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
  <%= task.user.name %><br>
  posted at <%= task.created_at %><br>
  
  id: <%= task.id %><br>
  task: <%= task.content %><br>
  status: <%= task.status %><br>

  <% if current_user == task.user %>
    <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-lg btn-primary' %><br>
    <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %><br>
  <% end %>
<br>
<% end %>
<%= paginate tasks %>
