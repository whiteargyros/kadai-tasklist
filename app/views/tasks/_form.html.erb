<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'task' %>
  <%= f.text_field :content %><br>
  
  <%= f.label :status, 'status' %>
  <%= f.text_field :status %><br>

  <%= f.submit 'submit' %>
<% end %>