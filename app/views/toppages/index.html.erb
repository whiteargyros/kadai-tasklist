<% if logged_in? %>
  <h3>PostTask</h3>
  <%= render 'tasks/form', task: @task %>
  <h3>Tasklist</h3>
  <%= render 'tasks/tasks', tasks: @tasks %>
  <h3>Menu</h3>
  <%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
  <h1>Welcome to the Tasklist</h1>
  <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %><br>
  <%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary' %>
<% end %>